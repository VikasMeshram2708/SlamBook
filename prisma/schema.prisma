generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Slams {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  title String

  slug String @unique

  content String

  author User @relation(fields: [authorId], references: [id])

  authorId String @db.ObjectId

  created_on String
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name String

  username String @unique

  email String @unique

  password String

  avatar String?

  slams Slams[]

  created_on String
}
